# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.UserController.index


#Forms
GET     /addWarehouse               controllers.LoginController.addWarehouse()
GET     /addProduct                 controllers.LoginController.addProduct()
GET     /addTag                     controllers.LoginController.addTag()


#Warehouse
POST    /warehouse                  controllers.TaskController.create()

#User
GET     /user                    controllers.CustomerController.list()
GET     /user/:id                controllers.CustomerController.show(id: Long)
POST    /user                    controllers.CustomerController.create()

#Tag
GET     /tag                        controllers.ProjectController.list()
POST    /tag                        controllers.ProjectController.create()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
